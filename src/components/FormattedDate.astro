---
import { getLangFromUrl  } from "../i18n/utils";

interface Props {
  date: Date;
}

const lang = getLangFromUrl(Astro.url);
const { date } = Astro.props;
---

<time datetime={new Date(date).toISOString()}>
  {
    new Date(date).toLocaleDateString(lang === "en" ? "en-us" : "pt-br", {
      month: "short",
      day: "numeric",
      year: "numeric",
    })
  }
</time>
